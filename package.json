{
  "name": "magwords",
  "version": "0.0.0-development",
  "description": "It's written in Rust!",
  "main": "src/main.rs",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "test": "vitest --coverage.enabled=true",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "prettier": "prettier --write .",
    "release": "semantic-release",
    "deps:ci": "depcruise --output-type err front-end/src",
    "deps:graph": "depcruise --output-type dot front-end/src | dot -T svg > dependency-graph.svg",
    "deps:report": "depcruise --output-type err-html --output-to dependency-report.html front-end/src"
  },
  "engines": {
    "node": ">=20.11.0",
    "npm": ">=10.3.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kristof-mattei/magwords"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/kristof-mattei/magwords/issues"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-jss": "^10.10.0",
    "react-query": "^3.39.3",
    "xss": "^1.0.14"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix -- ",
      "depcruise --include-only ^src/ --validate -- "
    ],
    "*": [
      "prettier --ignore-unknown --write --"
    ]
  },
    "homepage": "https://github.com/kristof-mattei/magwords#readme",
  "devDependencies": {
    "@actions/tool-cache": "^2.0.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^11.1.0",
    "@semantic-release/github": "^9.2.3",
    "@semantic-release/release-notes-generator": "^12.1.0",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.39",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/parser": "^6.13.1",
    "@vitejs/plugin-react": "^4.2.0",
    "@vitest/coverage-v8": "^0.34.6",
    "conventional-changelog-conventionalcommits": "^7.0.2",
    "dependency-cruiser": "^16.0.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-standard-with-typescript": "^40.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hook-form": "^0.3.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "jest-environment-jsdom": "^29.7.0",
    "nock": "^13.4.0",
    "prettier": "^3.1.0",
    "semantic-release": "^22.0.8",
    "semver": "^7.5.4",
    "serialize-error": "^11.0.3",
    "typescript": "^5.3.2",
    "vite": "^5.0.4",
    "vite-plugin-checker": "^0.6.2",
    "vite-plugin-svgr": "^4.2.0",
    "vite-tsconfig-paths": "^4.2.1",
    "vitest": "^0.34.6"

  },
  "publishConfig": {
    "access": "restricted"
  }
}
